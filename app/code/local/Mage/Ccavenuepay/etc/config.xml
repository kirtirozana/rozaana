<?xml version="1.0"?>

<config>
    <global>
        <models>
            <ccavenuepay>
                <class>Mage_Ccavenuepay_Model</class>
            </ccavenuepay>
        </models>		 
    </global>
    <frontend>        
        <routers>
            <ccavenuepay>
                <use>standard</use>
                <args>
                    <module>Mage_Ccavenuepay</module>
                    <frontName>ccavenuepay</frontName>
                </args>
            </ccavenuepay>
        </routers>
		<translate>
            <modules>
                <Mage_Ccavenuepay>
                    <files>
                        <default>Mage_Ccavenuepay.csv</default>
                    </files>
                </Mage_Ccavenuepay>
            </modules>
        </translate> 
		<layout>
            <updates>
                <ccavenuepay>
                    <file>ccavenuepay.xml</file>
                </ccavenuepay>
            </updates>
        </layout>
    </frontend>
	<adminhtml>
		<layout>
            <updates>
                <ccavenuepay>
                    <file>ccavenuepay.xml</file>
                </ccavenuepay>
            </updates>
        </layout>
	</adminhtml>
    <default>
        <payment>
            <ccavenuepay>
                <active>1</active>
                <model>ccavenuepay/method_ccavenuepay</model>
                <order_status>1</order_status>
				<payment_success_status>2</payment_success_status>
                <title>CCAvenue MCPG</title>
				<allowspecific>0</allowspecific>
            </ccavenuepay>
         </payment>
