<config>
  <modules>
    <FME_Instantsearch>
      <version>1.2.0</version>
    </FME_Instantsearch>
  </modules>
  <frontend>
    <routers>
      <instantsearch>
        <use>standard</use>
          <args>
            <module>FME_Instantsearch</module>
            <frontName>instantsearch</frontName>
          </args>
      </instantsearch>
    </routers>
		<layout>
		  <updates>
  			<instantsearch>
  			  <file>instantsearch.xml</file>
  			</instantsearch>
		  </updates>
		</layout>
  </frontend>
  <global>
    <helpers>
      <instantsearch>
        <class>FME_Instantsearch_Helper</class>
      </instantsearch>
    </helpers>
  	<blocks>
  	  <instantsearch>
  		  <class>FME_Instantsearch_Block</class>
  	  </instantsearch>
  	</blocks>
    <resources>
                     
                <instantsearch_setup>
                    <setup>
                        <module>FME_Instantsearch</module>
                        
                    </setup>
                </instantsearch_setup>
                <connection>
                  <use>core_setup</use>
                </connection>
            
    </resources>
  </global>
  <admin>
       <routers>
        
             <adminhtml>
              
                <args>
                   <modules><fme_instantsearch after="Mage_Adminhtml">FME_Instantsearch_Adminhtml</fme_instantsearch></modules>
                 </args>
             </adminhtml>

        </routers>
        

  </admin>
  
    <adminhtml>
    
    
      <acl>
 
        <resources>
 
            <admin>
 
                <children>
 
                    <system>
 
                        <children>
 
                            <config>
 
                                <children>
 
                                    <instantsearch>
 
                                        <title>Instant Search Configuration</title>
 
                                    </instantsearch>
 
                                </children>
 
                            </config>
 
                        </children>
 
                    </system>
 
                </children>
 
            </admin>
 
        </resources>
 
    </acl>
     
     
  </adminhtml>
</config> 