<config>
    <acl>
        <resources>
            <all>
                <title>Allow Everything</title>
            </all>
            <admin>
                <children>
                     <system>
                        <children>
                            <config>
                                <children>
                                    <advancedreports_section translate="title" module="advancedreports">
                                        <title>Advanced Reports</title>
                                        <sort_order>100</sort_order>
                                    </advancedreports_section>
                                </children>
                            </config>
                        </children>
                    </system>
                    <report translate="title" module="reports">
                        <children>
                            <advancedreports translate="title" module="advancedreports">
                                <title>Advanced Reports</title>
                            </advancedreports>
                        </children>
                    </report>
                </children>
            </admin>
        </resources>
    </acl>
</config>


