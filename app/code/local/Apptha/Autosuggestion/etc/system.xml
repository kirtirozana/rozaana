<?xml version="1.0" ?>
<config>
   <tabs>
        <Apptha translate="label" module="autosuggestion">
            <label>Apptha</label>
            <sort_order>100</sort_order>
        </Apptha>
    </tabs>  
    <sections>
        <autosuggestion module="autosuggestion" translate="label">
            <label>Search Configuration</label>
            <sort_order>200</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <tab>Apptha</tab>
            <groups>
                <custom_group translate="label">
                    <label>Auto Search Configuration</label>
                    <comment><!-- My comments --></comment>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    
                    	<autosuggestion_options translate="label tooltip comment">
                            <label>Auto suggestion search by</label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/autosuggestionoption</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Select option to search by results</comment>
                        </autosuggestion_options>
                    	

                        <autosuggestion_default_text translate="label tooltip comment">
                            <label>Search Box default text message </label>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Default text message on search box</comment>
                        </autosuggestion_default_text>
                        
                        <autosuggestion_in_outstock translate="label tooltip comment">
                            <label>Search results based on</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/stockoption</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable search results based on in / out stock</comment>
                        </autosuggestion_in_outstock>
                        
                        <autosuggestion_by_link translate="label tooltip comment">
                            <label>Auto suggestion by link</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Enable auto suggestion link to product page</comment>
                        </autosuggestion_by_link>
                        
                        
                        <autosuggestion_searchbox_settings translate="label tooltip comment">
                            <label>Auto suggestion searchbox settings </label>
                            <frontend_type>multiselect</frontend_type>
                            <source_model>adminhtml/appthasettings</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Display selected options in autosuggestion. Product Name should be mandatory

                            </comment>
                        </autosuggestion_searchbox_settings>
                        
                    </fields>
                </custom_group>
            </groups>
        </autosuggestion>
    </sections>
</config>