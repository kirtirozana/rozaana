	<?php if($this->hasChildren()): ?>
	<ul class="level<?php echo $this->getLevel() ?>">
		<?php foreach($this->getChildren() as $child ): ?>
		<?php echo $child->toHtml() ?>
		<?php endforeach; ?>
	</ul>
	<?php endif; ?>
